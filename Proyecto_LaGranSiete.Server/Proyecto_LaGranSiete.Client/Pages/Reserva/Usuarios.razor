@page "/Api/Usuario"
@using Proyecto_LaGranSiete.Client.Servicios
@inject IHTTPServicio http
@using Proyecto_LaGranSiete.BD.Data.Entity


<!DOCTYPE html>
    <html>

        <head>
            <title>Formulario de Registro de Usuarios</title>
            @* hacer un nuevo archivo para hacer el diseño de pagina a los usuarios *@
            <link href="./css/Usuarios.css" rel="stylesheet" />

            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

            @* llevar a css *@
           

        </head>

        <body>

            <header>
                <h1 class="text-center text-danger text-uppercase">Usuarios</h1>
            </header>
   
            <main>

                <div class="container form-container"> 
                    
                    <h2 class="text-center">Registro de Usuarios</h2> 
                    
                    <form> 

                        <div class="mb-3"> 
                            <label for="nombre" class="form-label">Nombre</label> 
                            <input type="text" class="form-control" id="nombre" required> 
                        </div> 
                        
                        <div class="mb-3"> 
                            <label for="apellido" class="form-label">Apellido</label> 
                            <input type="text" class="form-control" id="apellido" required> 
                        </div> 
                        
                        <div class="mb-3"> 
                            <label for="fechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                            <input type="date" class="form-control" id="fechaNacimiento" required> 
                        </div> 
                        
                        <div class="mb-3"> 
                            <label for="telefono" class="form-label">Teléfono</label>
                            <input type="tel" class="form-control" id="telefono" required> 
                        </div> 
                        
                        <div class="mb-3"> 
                            <label for="email" class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" id="email" required> 
                        </div> 
                        
                        <div class="mb-3"> 
                            <label for="parentesco" class="form-label">Parentesco</label> 
                            <input type="text" class="form-control" id="parentesco" required> 
                        </div> 
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Registrar</button> 
                        </div> 
                    </form> 

                </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>    

            </main>
        
            <footer>
                <p>Todos los derechos reservados</p>
            </footer>
    
        </body>

    </html>

